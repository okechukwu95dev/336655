{
  "name": "tipster_picks",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "video_id": { "type": "string" },
      "source": { "type": "string" },
      "picks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "match": { "type": "string" },
            "pick": { "type": "string" },
            "odds": { "type": ["string", "null"] },
            "tipster": { "type": ["string", "null"] },
            "reasons": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "dimension": { "type": "string" },
                  "quote": { "type": "string" }
                },
                "required": ["dimension", "quote"],
                "additionalProperties": false
              }
            }
          },
          "required": ["match", "pick", "odds", "tipster", "reasons"],
          "additionalProperties": false
        }
      }
    },
    "required": ["video_id", "source", "picks"],
    "additionalProperties": false
  }
}
